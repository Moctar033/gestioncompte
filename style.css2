body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    margin: 20px;
    color: #333;
}

header, footer {
    text-align: center;
    padding: 10px;
    background-color: #ddd;
    border-radius: 10px;
}

main {
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    max-width: 600px;
    margin: auto;
}

a {
    color: blue;
    text-decoration: none;
}
